---
// Button.astro
const {trans, href, sub, icono, text , type, class: extraClass = ""} = Astro.props

const base = "min-w-[200px] sm:min-w-0 inline-flex flex-col gap-4 justify-end content-end p-8 bg-lima rounded-2xl aspect-1/1 cursor-pointer group overflow-hidden hover:scale-105 transition-[scale] relative no-underline @container";
---
<a href={href} class={`${base} ${extraClass}`} target={type}>
  <img transition:name=`${trans}1` src={icono} alt="" class="origin-center shrink-0 scale-100 w-30 h-30 left-1/2 right-1/2 top-1/3 -translate-x-1/2 -translate-y-1/2 absolute group-hover:right-1 group-hover:top-5 group-hover:scale-200 @max-[300px]:group-hover:opacity-0 @min-[300px]:scale-160 transition-all ease pointer-events-none">

  <span class="relative -translate-y-5 opacity-0 group-hover:opacity-100 group-hover:translate-y-0 transition-all ease-in-out font-kaku pointer-events-none text-azul text-pretty">{sub}</span>

  <span transition:name=`${trans}` class="transition-all ease-inout text-azul font-tektur font-medium text-4xl bottom-4 group-hover:bottom-1/2 pointer-events-none">{text}</span>
</a>
