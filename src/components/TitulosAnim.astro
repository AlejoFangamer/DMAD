---
const { titulo, name, icono } = Astro.props;
---
<div class="flex flex-col justify-center items-center mt-15 border-0 border-b-16 border-lima border-dashed w-full">
  <img transition:name=`${name}1` src={icono} alt="" class="w-30 scale-150 mask-linear-from-20% mask-linear-180">
  <h1 transition:name=`${name}` class="text-center font-tektur font-black text-5xl text-lima">{titulo}</h1>
</div>

<script>
  import { animate,splitText,stagger } from "animejs";

  const {chars} = splitText('h1',{
    chars: { wrap:'clip' }
  });

  animate( chars, {
    y: { to: ['100%', '0%'] },
    duration: 400,
    ease: 'outBack',
    delay: stagger(50)
  })
</script>