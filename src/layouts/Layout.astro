---
import ClientRouter from "astro/components/ClientRouter.astro"
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>DMAD</title>
		<ClientRouter />
	</head>
	<body>
		<div>
			<slot />
		</div>
	</body>
</html>

<style>
	@import "tailwindcss";

	@font-face {
		font-family: tektur;
		font-style: normal;
		font-weight: 400 500 600 700 800 900;
		src: url("/Fuentes/Tektur/Tektur.ttf") format('truetype');
	}

	@font-face {
		font-family: "Zen Kaku Gothic New";
		font-style: normal;
		font-weight: 300 400 500 700 900;
		src: url("/Fuentes/Kaku/ZenKakuGothicNew-Light.ttf") format('truetype'),
			url("/Fuentes/Kaku/ZenKakuGothicNew-Regular.ttf") format('truetype'),
			url("/Fuentes/Kaku/ZenKakuGothicNew-Medium.ttf") format('truetype'),
			url("/Fuentes/Kaku/ZenKakuGothicNew-Bold.ttf") format('truetype'),
			url("/Fuentes/Kaku/ZenKakuGothicNew-Black.ttf") format('truetype');
	}

	@theme {
		--color-lima: oklch(0.8438 0.1348 116.78);
		--color-azul: oklch(0.3612 0.1448 275.87);
		--color-blanco: oklch(0.9127 0.0084 91.49);

		--font-tektur: "tektur", "sans-serif";
		--font-kaku: "Zen Kaku Gothic New", "sans-serif";
	}
	
	@layer utilities {
		.scrollbar-hidden::-webkit-scrollbar {
			display: none;
		}
		.scrollbar-hidden {
			-ms-overflow-style: none;  /* IE and Edge */
			scrollbar-width: none;     /* Firefox */
		}
  }

	body {
		@apply grid place-content-center bg-azul;
	}

	body > div {
		@apply container relative overflow-x-hidden;
	}

	@keyframes trans {
    0% {
			transform: scale(0);
    }
    100% {
      transform: scale(1);
    }
  }

</style>
